<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
        </encoder>

    </appender>

    <logger name="org.apache.flink" level="error" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.apache.flink.test.util" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.ariskk.flink4s" level="debug" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
   <logger name="akka.event.slf4j.Slf4jLogger" level="error" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>


    <root level="info">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
